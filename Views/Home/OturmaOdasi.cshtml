@model List<Product>
@{
    ViewData["Title"] = "Oturma Odası - Elit Mobilya";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4 text-center mb-4">Oturma Odası</h1>
            <p class="text-center text-muted">Modern ve şık oturma odası mobilyalarımızı keşfedin.</p>
        </div>
    </div>

    
    <div class="row g-4">
        @if (Model.Any())
        {
            @foreach (var product in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card product-card h-100 border-0 shadow-sm">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name"
                             style="height: 250px; object-fit: cover;">
                        <div class="card-body">
                            <span class="badge bg-primary mb-2">@product.Category?.Name</span>
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text text-muted">@(product.Description?.Length > 100 ? product.Description.Substring(0, 100) + "..." : product.Description)</p>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="h5 text-primary mb-0">@product.Price.ToString("N2") TL</span>
                                <button class="btn btn-primary">
                                    <i class="fas fa-shopping-cart"></i> Sepete Ekle
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    Henüz bu kategoride ürün bulunmamaktadır.
                </div>
            </div>
        }
    </div>

    
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="text-center">
                <i class="fas fa-truck fs-1 text-primary mb-3"></i>
                <h3 class="h5">Ücretsiz Teslimat</h3>
                <p class="text-muted">Tüm Türkiye'ye ücretsiz teslimat</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="text-center">
                <i class="fas fa-medal fs-1 text-primary mb-3"></i>
                <h3 class="h5">Kalite Garantisi</h3>
                <p class="text-muted">2 yıl garanti</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="text-center">
                <i class="fas fa-couch fs-1 text-primary mb-3"></i>
                <h3 class="h5">Montaj Hizmeti</h3>
                <p class="text-muted">Ücretsiz kurulum</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    
    $(document).ready(function() {
        $('.btn-group .btn').click(function() {
            $('.btn-group .btn').removeClass('active');
            $(this).addClass('active');
        });
    });
</script>
} 