<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
</head>
<body>
    <div class="d-flex">
        <div class="sidebar bg-dark text-light">
            <div class="sidebar-header p-3">
                <h4 class="mb-0">Admin Panel</h4>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-light" asp-controller="Admin" asp-action="Index">
                        <i class="fas fa-home me-2"></i>Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-controller="Products" asp-action="Index" asp-area="Admin">
                        <i class="fas fa-box me-2"></i>Ürünler
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-controller="Categories" asp-action="Index" asp-area="Admin">
                        <i class="fas fa-tags me-2"></i>Kategoriler
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-controller="Orders" asp-action="Index" asp-area="Admin">
                        <i class="fas fa-shopping-cart me-2"></i>Siparişler
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" href="@Url.Action("Logout", "Admin")">
                        <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                    </a>
                </li>
            </ul>
        </div>

        <div class="main-content">
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-link" id="menu-toggle">
                        <i class="fas fa-bars"></i>
                    </button>
                    <div class="ms-auto">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary me-3" target="_blank">
                            <i class="fas fa-external-link-alt me-2"></i>Siteye Dön
                        </a>
                        <span class="me-3">Hoş geldiniz, Admin</span>
                    </div>
                </div>
            </nav>

            <div class="container-fluid p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <style>
        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
        }

        .main-content {
            margin-left: 250px;
            width: calc(100% - 250px);
        }

        .nav-link {
            padding: 0.8rem 1rem;
        }

        .nav-link:hover {
            background-color: rgba(255,255,255,0.1);
        }
    </style>
</body>
</html> 